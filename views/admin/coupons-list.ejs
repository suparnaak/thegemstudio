<%- include("../../views/partials/admin/header") %>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-10 col-md-9 ml-sm-auto p-4">
            <h1>Coupon Management</h1>
            <a href="/admin/coupons/add" class="btn btn-primary mb-3">Add New Coupon</a>
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Code</th>
                        <th>Discount (%)</th>
                        <th>Min Order Price</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% coupons.forEach(coupon => { %>
                        <tr>
                            <td><%= coupon.code %></td>
                            <td><%= coupon.discount_percent %></td>
                            <td><%= coupon.min_order_price %></td>
                            <td><%= coupon.start_date.toLocaleDateString() %></td>
                            <td><%= coupon.end_date.toLocaleDateString() %></td>
                            <td><%= coupon.status %></td>
                            <td>
                                <% if (coupon.is_deleted) { %>
                                    <span class="text-muted">Deleted</span>  <!-- Show Deleted text -->
                                <% } else { %>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteCoupon('<%= coupon._id %>')">Delete</button>  <!-- Show Delete button -->
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                
            </table>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="d-flex justify-content-center">
                <ul class="pagination">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li>
                    <% } %>

                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                    <% } %>

                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // Function to delete coupon with SweetAlert confirmation
    function deleteCoupon(couponId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "This action cannot be undone!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.createElement('form');
                form.action = `/admin/coupons/delete/${couponId}`;
                form.method = 'POST';
                document.body.appendChild(form);
                form.submit();
            }
        });
    }
</script>

<%- include("../../views/partials/admin/footer") %>
